conflict cp2k

proc ModulesHelp { } {
puts stderr "CP2K 8.1"
puts stderr "============\n"
puts stderr "This module sets up your environment to access CP2K version 8.1"
puts stderr "Once the module is loaded the cp2k.popt and cp2k.psmp"
puts stderr "executables will be available"
puts stderr "\tInstalled by: H. Judge, EPCC"
puts stderr "\tDate: 15 March 2021\n"
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

set CP2K_CURPATH /work/y07/shared/cp2k
set CP2K_VERSION cp2k-8.1

prepend-path  PATH $CP2K_CURPATH/$CP2K_VERSION/exe/ARCHER2
setenv DATA_DIR $CP2K_CURPATH/$CP2K_VERSION/data
