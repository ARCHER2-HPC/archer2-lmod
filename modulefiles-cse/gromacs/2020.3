#%Module
#
if {[is-loaded cce]} {
   module switch cce gcc/10.1.0
}
if {[is-loaded aocc]} {
   module switch aocc gcc/10.1.0
}
 
# Clashes
conflict gromacs

proc ModulesHelp { } {
puts stderr "Gromacs 2020.3"
puts stderr "============\n"
puts stderr "This module sets up your environment to access Gromacs 2020.3"
puts stderr "Once loaded you can access Gromacs single- and double-precision"
puts stderr "MPI executables using the 'gmx_mpi' and 'gmx_mpi_d' commands"
puts stderr "respectively.\n"
puts stderr "\tInstalled by: J. Sindt, EPCC"
puts stderr "\tDate: 16 October 2020\n"
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

set GROMACS_CURPATH /work/y07/shared/gromacs
set GROMACS_VERSION gromacs-2020.3

prepend-path  PATH $GROMACS_CURPATH/$GROMACS_VERSION/bin
