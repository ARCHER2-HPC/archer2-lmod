# Clashes
conflict code_saturne

proc ModulesHelp { } {
  puts stderr "MITgcm checkpoint 67s"
  puts stderr "=====================\n"
  puts stderr "\tThis module supplies MITgcm c67s.\n"
  puts stderr "\tFull documentation is available online at"
  puts stderr "\thttps://mitgcm.readthedocs.io/\n"
  puts stderr "\tInstalled by: W. Lucas, EPCC"
  puts stderr "\tDate: 20 October 2020\n"
}

#module restore /etc/cray-pe.d/PrgEnv-gnu
#module load /work/y07/shared/archer2-modules/modulefiles-cse/epcc-setup-env

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

set LEVEL c67s
set CURPATH /work/y07/shared/mitgcm/$LEVEL

setenv           MITGCM_ROOTDIR $CURPATH
setenv		 MITGCM_OPTFILE $CURPATH/tools/build_options/linux_amd64_gfortran_archer2
prepend-path     PATH $CURPATH/tools
